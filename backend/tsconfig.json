{
    "compilerOptions": {
        "module": "esnext",
        "moduleResolution": "node",
        "target": "es2019",
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./",
        "paths": {
            "@utils/*": [
                "lib/utils/*",
                "../utils/*"
            ],

            "@policies/*": [
                "lib/policies/*"
            ],

            "@lifecycle/*": [
                "lib/lifecycle/*"
            ],

            "@config/*": [
                "lib/config/*"
            ],
            "@config": [
                "lib/config"
            ],
            
            "@lib/*": [
                "lib/*"
            ]
        }
    },
    "exclude": [
        "node_modules",
        "config"
    ],
}